<p id="notice"><%= notice %></p>

<h1>Tweets</h1>
<h5><%= link_to 'List Of All Users', users_path %></h5>
<table>
  <thead>
    <tr>
      <th>Heading</th>
      <th>Description</th>
      <th>User</th>
      <th><%= link_to 'ASC', tweets_path(order: 'ASC') %></th>
      <th><%= link_to 'DESC', tweets_path(order: 'DESC') %></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.heading %></td>
        <td><%= tweet.description %></td>
        <td><%= tweet.user_id %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
